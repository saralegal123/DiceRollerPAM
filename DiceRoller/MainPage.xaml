<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceRoller.MainPage">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                x:Name="DadoImage"
                Source="dado.png"
                HeightRequest="225"
                />
            <Picker
                x:Name="SelecaoPicker"
                Title="Escolha um lado do dado">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>1</x:String>
                        <x:String>2</x:String>
                        <x:String>3</x:String>
                        <x:String>4</x:String>
                        <x:String>5</x:String>
                        <x:String>6</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Button
                x:Name="RollerButton"
                Text="Rolar o dado" 
                Clicked="RollerButton_Clicked"
                HorizontalOptions="Fill" />

            <Label
                    x:Name="StreakLabel"
                    Text="Você ganhou 0 vezes em sequencia."
                    HorizontalOptions="Center"/>

            <Label
                    x:Name="PlayerPointLabel"
                    Text="Você ganhou 0 vezes ao todo."
                    HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
